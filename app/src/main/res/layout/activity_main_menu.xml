<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zoobg"
    tools:context=".MainMenu">

    <Button
        android:id="@+id/instructButton"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="116dp"
        android:background="@drawable/custom_button"
        android:fontFamily="cursive"
        android:onClick="clickInstruct"
        android:text="Instructions"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playButton" />

    <ImageView
        android:id="@+id/menuTitle"
        android:layout_width="365dp"
        android:layout_height="134dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vz_logo2" />

    <Button
        android:id="@+id/playButton"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="116dp"
        android:background="@drawable/custom_button"
        android:fontFamily="cursive"
        android:onClick="clickPlay"
        android:text="Play"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menuTitle" />

    <ImageView
        android:id="@+id/celeryGuy"
        android:layout_width="226dp"
        android:layout_height="292dp"
        android:layout_marginStart="205dp"
        android:layout_marginTop="377dp"
        android:rotation="6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/clery" />

    <ImageView
        android:id="@+id/carrotGuy"
        android:layout_width="186dp"
        android:layout_height="344dp"
        android:layout_marginTop="365dp"
        android:layout_marginEnd="235dp"
        android:rotation="-5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/carrot" />

    <ImageView
        android:id="@+id/tomatoGuy"
        android:layout_width="176dp"
        android:layout_height="128dp"
        android:layout_marginTop="525dp"
        android:layout_marginEnd="127dp"
        android:rotation="-5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tomato" />

</androidx.constraintlayout.widget.ConstraintLayout>